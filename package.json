{
  "name": "@ghostgroup/exchange-fe",
  "version": "0.0.1",
  "description": "exchange front-end",
  "main": "index.js",
  "scripts": {
    "precommit": "lint-staged",
    "lint": "npm run js-lint",
    "js-lint": "./node_modules/.bin/eslint ./lib ./components ./pages",
    "eslint-check": "eslint --print-config .eslintrc.js | eslint-config-prettier-check",
    "format": "eslint --fix ./lib ./components ./pages",
    "test": "NODE_ENV=test LOG_LEVEL=WARN jest --coverage --no-cache",
    "test:nocover": "NODE_ENV=test LOG_LEVEL=WARN jest --no-cache",
    "test:serial": "NODE_ENV=test LOG_LEVEL=WARN jest --coverage --no-cache --bail --logHeapUsage --runInBand",
    "test-update": "NODE_ENV=test LOG_LEVEL=WARN jest --updateSnapshot",
    "test:debug": "NODE_ENV=test LOG_LEVEL=DEBUG node --inspect-brk ./node_modules/.bin/jest -i --env jest-environment-node-debug",
    "build": "if [ ! -d build ]; then mkdir -p build; fi && next build",
    "analyze": "NODE_ENV=production npm run build && webpack-bundle-analyzer build/.next/stats.json",
    "start": "node ./server.js",
    "debug": "LOG_LEVEL=DEBUG node --inspect ./server.js",
    "storybook": "NODE_ENV=test start-storybook -s . -p 6006",
    "build-storybook": "build-storybook",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up",
    "generate-buildid": "rm -f build/.next/BUILD_ID && hash-files -f '[\"build/.next/**\",\"build/.next/build-stats.json\"]' >> build/.next/BUILD_ID",
    "clean-build": "rm -rf ./build",
    "test-bundlesize": "NODE_ENV=production npm run build && bundlesize"
  },
  "bundlesize": [
    {
      "path": "./build/.next/main.js",
      "maxSize": "220 kB"
    }
  ],
  "lint-staged": {
    "*.js": [
      "npx glow focus-check",
      "eslint --fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GhostGroup/admin.git"
  },
  "bugs": {
    "url": "https://github.com/GhostGroup/admin/issues"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/lib/jest/custom-matchers.js",
    "setupFiles": [
      "<rootDir>/lib/jest/jsdom-polyfills.js",
      "<rootDir>/lib/jest/configure-enzyme.js",
      "<rootDir>/__mocks__/local-storage.js"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/build",
      "<rootDir>/lib/routes/__mocks__/index.js"
    ],
    "collectCoverageFrom": [
      "pages/**/*.js",
      "!<rootDir>/pages/login.js",
      "stores/**/*.js",
      "components/**/!(*.stories|dist).js",
      "!lib/jest/**/*.js",
      "lib/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "dist/",
      "components/dev/"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
    },
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "homepage": "https://github.com/GhostGroup/admin#readme",
  "dependencies": {
    "@ghostgroup/grid-styled": "~4.0.0",
    "@ghostgroup/next-routes": "1.5.1-beta",
    "@ghostgroup/ui": "^19.0.2",
    "@ghostgroup/wm-sdk-js": "^1.3.1",
    "@zeit/next-bundle-analyzer": "^0.1.1",
    "axios": "^0.18.0",
    "babel-eslint": "^8.2.6",
    "babel-plugin-module-resolver": "~2.7.1",
    "chalk": "^2.4.1",
    "date-fns": "^1.29.0",
    "dotenv": "~4.0.0",
    "dotenv-webpack": "^1.5.7",
    "downshift": "~1.25.0",
    "express": "^4.16.3",
    "express-csp": "^0.1.3",
    "formik": "^1.3.1",
    "glow": "^1.2.2",
    "gutil": "~1.6.4",
    "hash-files": "~1.1.1",
    "honeybadger": "^1.2.1",
    "isomorphic-fetch": "~2.2.1",
    "js-logger": "^1.4.1",
    "lodash.debounce": "~4.0.8",
    "lodash.find": "^4.6.0",
    "lodash.flatten": "^4.4.0",
    "lodash.get": "~4.4.2",
    "lodash.has": "~4.5.2",
    "lodash.intersection": "^4.4.0",
    "lodash.isequal": "~4.5.0",
    "lodash.memoize": "~4.1.2",
    "lodash.sortby": "^4.7.0",
    "mobx": "^5.0.4",
    "mobx-react": "^5.2.5",
    "mobx-state-tree": "^3.2.3",
    "newrelic": "^4.1.4",
    "next": "^5.1.0",
    "nprogress": "~0.2.0",
    "polished": "^1.9.3",
    "prop-types": "^15.6.2",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-howler": "^3.7.2",
    "react-pose": "^3.1.0",
    "react-resize-detector": "^2.3.0",
    "react-storybook-decorator-background": "^1.0.5",
    "react-test-renderer": "^16.3.2",
    "react-transition-group": "^2.3.1",
    "react-waypoint": "^8.0.1",
    "serialize-error": "^2.1.0",
    "shiitake": "^2.2.4",
    "shortid": "^2.2.8",
    "slugify": "~1.2.1",
    "styled-components": "^3.3.3",
    "universal-webpack": "^0.6.5",
    "webpack": "3.11.0",
    "webpack-bundle-analyzer": "^2.12.0",
    "webpack-shell-plugin": "^0.5.0",
    "yup": "^0.26.6"
  },
  "devDependencies": {
    "@ghostgroup/danger-plugins": "^1.2.0",
    "@ghostgroup/eslint-config": "^1.0.2",
    "@ghostgroup/eslint-config-react": "^1.0.1",
    "@storybook/addon-actions": "^3.4.2",
    "@storybook/addon-backgrounds": "^3.4.2",
    "@storybook/addon-centered": "^3.4.2",
    "@storybook/addon-knobs": "^3.4.2",
    "@storybook/react": "^3.4.2",
    "babel-jest": "^23.4.0",
    "babel-plugin-js-logger": "^1.0.17",
    "babel-plugin-styled-components": "^1.5.1",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.5",
    "babel-plugin-transform-object-rest-spread": "~6.26.0",
    "babel-preset-es2015": "~6.24.1",
    "babel-preset-flow": "^6.23.0",
    "bundlesize": "^0.17.0",
    "danger": "^3.7.20",
    "danger-plugin-flow": "^1.4.0",
    "danger-plugin-jira-issue": "^1.3.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.0.1",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "~16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-import-resolver-babel-module": "~4.0.0-beta.3",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.10.0",
    "flow-bin": "^0.69.0",
    "flow-typed": "^2.5.1",
    "husky": "~0.14.3",
    "jest-cli": "^23.4.1",
    "jest-environment-node-debug": "~2.0.0",
    "jest-styled-components": "next",
    "lint-staged": "~4.3.0",
    "nock": "^9.2.5",
    "prettier": "^1.13.7",
    "react-addons-test-utils": "~15.6.2"
  }
}
